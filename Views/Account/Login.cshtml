@{ 
    Layout = null;
    ViewData["Title"] = "Login | ZZPrescription"; 

}

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
  </head>

@model LoginViewModel 


<div class="container" id="container">
	<div class="form-container sign-in-container">
        <form asp-action="Login" method="post">
			<h1>Connexion</h1>
            <div class="form-group">
                <label asp-for="UserName">Nom D'utilisateur</label>
                <input class="input-size" asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Mot De Passe</label>
                <div class="input-group">
                    <input class="input-size" asp-for="Password" class="form-control" type="password" id="passwordInput" />
                    <button class="eye-btn" type="button" class="btn btn-outline-secondary" id="togglePassword">
                        <img id="passwordIcon" src="~/svg/eye-closed.svg" alt="Icône mot de passe" width="20">
                    </button>
                </div>
            </div><br><br><br>
            <div class="checkbox-wrapper">
                <input asp-for="RememberMe" class="checkbox" type="checkbox" />
                <label class="check" asp-for="RememberMe"><span></span>Se souvenir de moi</label>
            </div>
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey(string.Empty))
            {
                var errors = ViewData.ModelState[string.Empty]?.Errors;
                if (errors != null && errors.Count > 0)
                {
                    <div class="error-msg">@errors[0].ErrorMessage</div>
                }
            }
            <span asp-validation-for="UserName" class="error-msg"></span>
            <span asp-validation-for="Password" class="error-msg"></span>
            <button type="submit">Connexion</button>
        </form>
	</div>²
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-right">
				<h1>Bonjour, Bienvenue sur</h1>
                <img src="~/pics/logogsb.png" alt="Logo" width="200px" height="150px">
                <h3>Pas encore de compte ?</h3>
                <div>
                    <a href="@Url.Action("Register", "Account")"> Inscription</a>
                </div>
			</div>
		</div>
	</div>
</div>
<body>
<script src="~/js/Login/showPassword.js"></script>
</body>
</html>