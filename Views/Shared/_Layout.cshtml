






<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | ZZPrescription</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ZZPrescription.styles.css" asp-append-version="true" />
    <script src="~/js/site.js"></script>

</head>
<body>
    <header>
        <nav>
            <div class="navbar">
                    <form action="@Url.Action("Index", "Home")" method="get">
                        <button type="submit" class="@((ViewBag.ActiveTab == "Home") ? "active" : "")">
                        <img src="~/pics/logogsbpetit.png" alt="Logo" width="50px" height="50px">
                        </button>
                    </form>
                        <div class="links">
                        <form action="@Url.Action("Index", "Home")" method="get">
                            <button type="submit" class="@((ViewBag.ActiveTab == "Home") ? "active" : "")">Accueil</button>
                        </form>
                        <form action="@Url.Action("Index", "Patient")" method="get">
                            <button type="submit" class="@((ViewBag.ActiveTab == "Patient") ? "active" : "")">Patient</button>
                        </form>
                        <form action="@Url.Action("Index", "Medicament")" method="get">
                            <button type="submit" class="@((ViewBag.ActiveTab == "Medicament") ? "active" : "")">Médicament</button>
                        </form>
                        <form action="@Url.Action("Index", "Ordonnance")" method="get">
                            <button type="submit" class="@((ViewBag.ActiveTab == "Ordonnance") ? "active" : "")">Ordonnance</button>
                        </form>
                    </div>
            </div>
        </nav>
        <div class="image-container">
            <img src="@Url.Content("~/pics/" + ViewBag.ImageName)" alt="Image" />
        </div>
        <div class="image-logo">
            <img src="~/pics/logogsb.png" alt="Logo">
        </div>
    </header>
    @RenderBody()
    <footer class="border-top footer text-muted">
            © 2024 | ZZPrescription <br>
            Tous droits réservés
    </footer>
</body>
</html>
